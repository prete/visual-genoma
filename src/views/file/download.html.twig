{% set title = 'Descarga | Administraci√≥n de Archivos | Visual Genoma' %}
{% set header = 'Descarga' %}
{% set header_opt = 'Obtenga una copia de sus archivos' %}
{% set active_menu = 'files' %}
{% set breadcrumbs = ['Visual Genoma','Archivos','Descargas'] %}

{% extends 'layout.html.twig' %}

{% block content %}

<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Archivos cargados</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="table-responsive mailbox-messages">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th style="width:10%"></th>
                <th>Nombre del archivo</th>
                <th>Fecha de carga</th>
              </tr>
            </thead>
            <tbody>
            {% for archivo in archivos %}
                <tr>
                  <td class="file-id">
                    <a href="/file/download/{{ archivo.idvcf }}"
                    class="btn btn-xs btn-primary" 
                    data-toggle="tooltip" 
                    title="Descargar archivo seleccionado" 
                    download><i class="fa fa-fw fa-download"></i></a>
                  </td>
                  <td class="file-name">{{ archivo.filename }}</td>
                  <td class="file-date">{{ archivo.date }}</td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
          <!-- /.table -->
        </div>
        <!-- /.mail-box-messages -->
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /. box -->
  </div>
  <!-- /.col -->
</div>
<!-- /.row -->

{% endblock %}