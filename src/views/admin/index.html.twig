{% set title = 'Administración | VISUAL GENOMA' %}
{% set header = 'Usuarios' %}
{% set header_opt = ''  %}
{% set active_menu = 'admin' %}
{% set breadcrumbs = ['Administración','Usuarios',] %}

{% extends 'layout.html.twig' %}

{% block content %}  <!-- Main content -->

<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Lista de usuarios</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="table-responsive mailbox-messages">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Nombre</th>
                        <th>Género</th>
                        <th>DNI</th>
                        <th>Tel</th>
                        <th>Móvil</th>
                        <th>Estado</th>
                        <th>Roles</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for usuario in usuarios %}
                        <tr>
                            <td>{{ usuario.email }}</td>
                            <td>{{ usuario.name }}</td>
                            <td>{{ usuario.gender }}</td>
                            <td>{{ usuario.dni }}</td>
                            <td>{{ usuario.phone }}</td>
                            <td>{{ usuario.movil }}</td>
                            <td>{{ usuario.status }}</td>
                            <td>{{ usuario.roles }}</td>
                            <td>
                                <a href="/admin/edit/{{ usuario.iduser }}">Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
          <!-- /.table -->
        </div>
        <!-- /.mail-box-messages -->
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /. box -->
  </div>
  <!-- /.col -->
</div>
<!-- /.row -->

<!-- /.row -->
{% endblock %}

{% block scripts %}
{% endblock %}
